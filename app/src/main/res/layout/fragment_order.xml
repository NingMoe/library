<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--预约情况-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/order_top_margin"
        android:layout_marginTop="@dimen/order_top_margin"
        android:layout_gravity="center"
        android:gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <include layout="@layout/fragment_order_part1"></include>
        </ScrollView>

    </LinearLayout>
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/order_style_background"
        android:padding="@dimen/padding"
        android:textSize="@dimen/order_style_size"
        android:text="@string/order_style"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_divide"
        android:background="@color/dividerColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/activity_order_container"
                    style="@style/order_linearlayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_people_black_24dp"
                        android:backgroundTint="@color/order1_img"
                        />
                    <TextView
                        style="@style/order_text"
                        android:text="@string/order_text1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/activity_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/order_badge_margin"
                            android:gravity="center"
                            android:text="0"
                            style="@style/order_badge_style" />

                        <ImageView
                            android:id="@+id/activity_item"
                            android:layout_width="@dimen/order_img_size"
                            android:layout_height="@dimen/order_img_size"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_divide"
                    android:background="@color/dividerColor"/>
                <LinearLayout
                    android:id="@+id/class_order_container"
                    style="@style/order_linearlayout"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_desktop_mac_black_24dp"
                        android:backgroundTint="@color/order2_img"
                        />
                    <TextView
                        style="@style/order_text"
                        android:text="@string/order_text2"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/class_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/order_badge_margin"
                            android:gravity="center"
                            android:text="0"
                            style="@style/order_badge_style" />

                        <ImageView
                            android:id="@+id/class_item"
                            android:layout_width="@dimen/order_img_size"
                            android:layout_height="@dimen/order_img_size"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />

                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/class_item"
                            android:background="@color/colorWhite">
                            <ImageView
                                android:id="@+id/class_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_filter_1_black_24dp"
                                android:backgroundTint="@color/blue1"/>
                        </LinearLayout>-->

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_divide"
                    android:background="@color/dividerColor"/>
                <LinearLayout
                    android:id="@+id/place_order_container"
                    style="@style/order_linearlayout"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_place_black_24dp"
                        android:backgroundTint="@color/order3_img"
                        />
                    <TextView
                        style="@style/order_text"
                        android:text="@string/order_text3"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                        </LinearLayout>

                        <TextView
                            android:id="@+id/place_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/order_badge_margin"
                            android:gravity="center"
                            android:text="0"
                            style="@style/order_badge_style" />

                        <ImageView
                            android:id="@+id/place_item"
                            android:layout_width="@dimen/order_img_size"
                            android:layout_height="@dimen/order_img_size"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                            />

                        <!--<LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/place_item"
                            android:background="@color/colorWhite">
                            <ImageView
                                android:id="@+id/place_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_filter_1_black_24dp"
                                android:backgroundTint="@color/blue1"/>
                        </LinearLayout>-->

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_divide"
                    android:background="@color/dividerColor"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>