                    </LinearLayout>-->
                </RelativeLayout>

                <!--排名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="@dimen/homepage_rank_margin_right">
                    <include layout="@layout/fragment_homepage_part2">

                    </include>
