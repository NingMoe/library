<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeRefresh">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:scrollbars="none"
        android:id="@+id/scrollView"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin">

                <!--图片切换布局-->
                <com.example.wangjinchao_pc.library.View.MyRatioLinearLayout
                    android:id="@+id/myRatio"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/homepage_margin_lr"
                    app:ratio_width_to_height="2.3">
                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:image_scale_type="fit_xy"
                        app:title_background="@color/banner_title_background"
                        app:title_textsize="@dimen/normal_small_text"
                        app:title_textcolor="@color/colorWhite"
                        app:title_height="@dimen/banner_title_height">
                    </com.youth.banner.Banner>
                </com.example.wangjinchao_pc.library.View.MyRatioLinearLayout>

                <!--预约情况-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="@dimen/homepage_margin_top">
                    <include layout="@layout/fragment_homepage_part1">

                    </include>

                </LinearLayout>

                <!--未还书本-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/homepage_debt_margin_top">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/alarm">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_warning_black_24dp"
                            android:layout_margin="@dimen/homepage_img_margin"
                            android:layout_marginRight="0dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/homepage_debt_margin_left"
                            style="@style/normal_white_text"
                            android:text="@string/debt3"/>
                        <TextView
                            android:id="@+id/alarm_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/normal_white_text"
                            android:text="10.00"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/homepage_debt_margin_right"
                            style="@style/normal_white_text"
                            android:text="@string/debt4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/homepage_debt_margin_left"
                            style="@style/normal_white_text"
                            android:text="@string/debt1"/>
                        <TextView
                            android:id="@+id/alarm_book"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            style="@style/normal_white_text"
                            android:text="10"/>
                        <!--<LinearLayout
