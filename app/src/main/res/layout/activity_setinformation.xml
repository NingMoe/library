<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/setInformation_paddind">
    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="心痕"
        android:padding="@dimen/setInformation_paddind"
        style="@style/normal_hint_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/dividerColor"
        android:layout_marginBottom="@dimen/setInformation_paddind"
        android:layout_marginTop="@dimen/setInformation_paddind"/>

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="好的名字让人产生好感"
        android:paddingLeft="@dimen/setInformation_paddind"
        style="@style/normal_small_light_text" />

</LinearLayout>