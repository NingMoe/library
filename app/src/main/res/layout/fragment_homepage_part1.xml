<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/homepage_alarm_img_size"
            android:layout_height="@dimen/homepage_alarm_img_size"
            app:srcCompat="@drawable/ic_access_alarm_black_24dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/text_background"
            android:layout_marginTop="@dimen/homepage_rank_margin_right">

            <!--需要改的————————————————————————-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center">
                <android.support.design.widget.TabLayout
                    android:id="@+id/order_tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_text"
                    android:layout_alignParentBottom="true"
                    app:tabMaxWidth="0dp"
                    app:tabGravity="fill"
                    app:tabMode="fixed">
                </android.support.design.widget.TabLayout>
<!--                <TextView
                    android:id="@+id/order_more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/more_text"
                    android:text="@string/more"/>-->

            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/order_viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homepage_part1_viewpager_height">
            </android.support.v4.view.ViewPager>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>