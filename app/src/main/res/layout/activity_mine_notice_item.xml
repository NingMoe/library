<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/container"
    style="@style/item">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:textColor="@color/colorBlack"
        android:text="2014.06.10"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:textColor="@color/ic_grey"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:lines="4"
        android:maxLines="4"
        android:ellipsize="end"
        android:text="各位读者：为暑假开学后实现“图书全开架借阅，读者无障碍进馆” 服务管理模式，需对旧书进行技术改造。因此，图书馆决定自2014年6月20日至2014年9月1日停止外借图书，读者手中所借图书务必在7月12日前归还图书馆。这一工作进行给读者造成的暂时不便敬请读者谅解。谢谢您的配合与支持！"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_main_margin"
        app:srcCompat="@drawable/ic_playlist_add_check_black_24dp"
        />
</LinearLayout>